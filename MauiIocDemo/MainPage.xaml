<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiIocDemo.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiIocDemo"
    x:DataType="local:MainViewModel"
    BindingContext="{local:Ioc {x:Type local:MainViewModel}}">

    <ScrollView>
        <VerticalStackLayout Padding="30,30,30,200" Spacing="25">
            <Label Text="First Name" />
            <Entry BackgroundColor="PaleGreen" Text="{Binding FirstName, Mode=TwoWay}" />

            <Label Text="Last Name" />
            <Entry BackgroundColor="PaleGreen" Text="{Binding LastName, Mode=TwoWay}" />

            <Label Text="Full Name" />
            <Entry
                BackgroundColor="SkyBlue"
                IsReadOnly="True"
                Text="{Binding FullName}" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
